<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/shape_rltv_buy_product"
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_price"
        android:layout_centerVertical="true"
        android:textSize="13sp"
        android:textColor="@color/gray500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="قیمت دوره :"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/txt_price_details_product"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/txt_price"
        android:textSize="18sp"
        android:textColor="@color/teal_200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_buy_details_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="خرید دوره"/>

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/pr_loading_caffebazaar"
            android:layout_centerHorizontal="true"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

    </RelativeLayout>

</RelativeLayout>